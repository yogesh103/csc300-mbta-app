{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Backend",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}/backend",
            "remoteRoot": "/app/backend",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Frontend",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend",
            "url": "http://localhost:3000",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        }
    ]
}